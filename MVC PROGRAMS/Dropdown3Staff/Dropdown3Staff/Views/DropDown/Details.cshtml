<script src="~/Scripts/jquery-3.7.0.min.js"></script>
<script type="text/javascript">



    $(document).ready(function () {

        $("#Staff").change(function ()
        {
            $("#Student").empty();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("getStudent")',
                dataType: 'json',
                data: { id: $("#Staff").val() },
                success: function (Student) {

                    $.each(Student, function (i, Student) {
                        $("#Student").append('<option value="'
                            + Student.Value + '">'
                            + Student.Text + '</option>');
                    });
                },
                error: function (ex) {
                    alert('Failed.' + ex);
                }
            });
            return false;
        })
    });
</script>

@model Dropdown3Staff.Models.Registration
<div class="form-group">
    @Html.LabelFor(model => model.Staff, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(model => model.Staff, ViewBag.Staff as List<SelectListItem>, new { style = "width: 200px;" })

        @Html.ValidationMessageFor(model => model.Staff, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Students, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(model => model.Students, new SelectList(string.Empty, "Value", "Text"), "--Select Product--", new { style = "width:200px" })

        @Html.ValidationMessageFor(model => model.Students, "", new { @class = "text-danger" })
    </div>
</div>









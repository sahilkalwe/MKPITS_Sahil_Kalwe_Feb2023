@{
    ViewBag.title = "Index";

}
@model Signup_form.Models.signupmodel

@using (Html.BeginForm("Index","Signup",FormMethod.Post))
{
    <h1>Signup Form</h1>
    <b> User Name </b> @Html.TextBox("username", "", new { style = "color:red" })
    <br />
    <br />
    <b> Password &nbsp&nbsp</b> @Html.Password("password", "", new { style = "color:red" })

    <br />
    <br />
    <input type="submit" value="Signup" />
}
<hr />
<h3> Signup Details :</h3>
User Name is : @ViewBag.username
<br />
Password is : @ViewBag.password
<br />




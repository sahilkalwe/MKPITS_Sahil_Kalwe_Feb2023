<script src="~/Scripts/jquery-3.7.0.min.js"></script>
<script type="text/javascript">



    $(document).ready(function () {

        $("#Category").change(function ()
        {
            $("#Products").empty();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("getProduct")',
                dataType: 'json',
                data: { id: $("#Category").val() },
                success: function (Products) {

                    $.each(Products, function (i, Products) {
                        $("#Products").append('<option value="'
                            + Products.Value + '">'
                            + Products.Text + '</option>');
                    });
                },
                error: function (ex) {
                    alert('Failed.' + ex);
                }
            });
            return false;
        })
    });
</script>

@model DropDown2.Models.Registration
<div class="form-group">
    @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(model => model.Category, ViewBag.Category as List<SelectListItem>, new { style = "width: 200px;" })

        @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Products, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(model => model.Products, new SelectList(string.Empty, "Value", "Text"), "--Select Product--", new { style = "width:200px" })

        @Html.ValidationMessageFor(model => model.Products, "", new { @class = "text-danger" })
    </div>
</div>






